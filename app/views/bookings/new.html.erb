<h2>New Booking</h2>
<%= form_for(@booking) do |f| %>
  <%= f.label :engineer_id %>
  <%= f.collection_select :engineer_id, @engineers, :id, :name %><br />
  <%= f.label :client_id %>
  <%= f.collection_select :client_id, @clients, :id, :name %><br />
  <%= f.label :cost %>
  <%= f.text_field :cost %><br />
  <%= f.submit %>
<% end -%>